<% form_tag(:action => "create_pair") do -%>
  <% nice_form_for :word, nil, :title => "New word" do |f| %>
    <% content_tag :li do -%>
      <%= f.label :name, @first_language.name %>
      <%= f.text_field :name %>
    <% end -%>
    <% content_tag :li do -%>
      <%= f.label :language, "Language goes here" %>
      <%= f.text_field :language %>
    <% end -%>
  <% end %>
<% end -%>
