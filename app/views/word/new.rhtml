<% nice_form_for :word, nil, :action => "create", :title => "New word" do |f| %>
  <% content_tag :li do -%>
    <%= f.label :name, :name %>
    <%= f.text_field :name %>
  <% end -%>
  <% content_tag :li do -%>
    <% fields_for :user do |u| %>
      <%= u.label :first_language, "first_language" %>
      <%= u.text_field :first_language %>
    <% end %>
  <% end -%>
<% end %>
