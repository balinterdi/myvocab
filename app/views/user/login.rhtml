<%= error_messages_for :user %>
<% form_tag :action => "login" do -%>
  <% nice_form_for :user, nil, :title => "Login" do |f| %>
    <% content_tag :li do -%>
      <%= f.label :login %>
      <%= f.text_field :login %>
    <% end -%>
    <% content_tag :li do -%>
      <%= f.label :password %>
      <%= f.password_field :password %>
    <% end -%>
  <%= submit_tag "Submit", :class => "submit_button" %>
  <% end %>
<% end -%>
