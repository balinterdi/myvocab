<% form_tag :action => "create" do -%>
  <% nice_form_for :language, nil, :title => "New language" do |f| %>
    <% content_tag :li do -%>
      <%= f.label :name %>
      <%= f.text_field :name %>
    <% end -%>
    <% content_tag :li do -%>
      <%= f.label :code %>
      <%= f.text_field :code %>
    <% end -%>
  <% end %>
<% end -%>
